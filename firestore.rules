rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Activities collection: Activity definitions (default + custom)
      match /activities/{activityId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Exercises collection: Exercise records (yapÄ±lan exercise'ler)
      match /exercises/{exerciseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Statistics collection: Calculated statistics
      match /statistics/{statId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Challenges collection: Challenge records
      match /challenges/{challengeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Badges collection: Badge records
      match /badges/{badgeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
